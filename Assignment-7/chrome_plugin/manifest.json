{
  "manifest_version": 3,
  "name": "FAISS Plugin A73 Final âœ…",
  "version": "1.7.0",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "exclude_matches": ["*://mail.google.com/*", "*://web.whatsapp.com/*"]
    }
  ]
}
